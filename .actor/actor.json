{
  "actorSpecification": 1,
  "name": "rag-spider",
  "title": "RAG Spider - Web to Markdown for AI",
  "description": "High-performance web crawler that extracts clean content from documentation websites, strips away navigation and ads using Mozilla's Readability engine, and converts content to RAG-ready Markdown chunks. Perfect for building high-quality AI training datasets.",
  "version": "1.0.0",
  "meta": {
    "templateId": "node-crawlee-playwright"
  },
  "input": "input_schema.json",
  "output": "output_schema.json",
  "storages": {
    "dataset": {
      "actorSpecification": 1,
      "title": "RAG-Ready Content Chunks",
      "description": "Clean Markdown content chunks optimized for vector databases and RAG systems",
      "views": {
        "overview": {
          "title": "Content Overview",
          "transformation": {
            "fields": [
              "url",
              "title",
              "status",
              "totalChunks",
              "totalTokens",
              "totalWords",
              "extractionMethod"
            ]
          },
          "display": {
            "component": "table",
            "properties": {
              "url": {
                "label": "Source URL",
                "format": "link"
              },
              "title": {
                "label": "Page Title"
              },
              "status": {
                "label": "Status"
              },
              "totalChunks": {
                "label": "Chunks",
                "format": "number"
              },
              "totalTokens": {
                "label": "Tokens",
                "format": "number"
              },
              "totalWords": {
                "label": "Words",
                "format": "number"
              },
              "extractionMethod": {
                "label": "Method"
              }
            }
          }
        },
        "chunks": {
          "title": "Content Chunks",
          "transformation": {
            "fields": [
              "url",
              "title",
              "chunks"
            ],
            "unwind": "chunks"
          },
          "display": {
            "component": "table",
            "properties": {
              "url": {
                "label": "Source URL",
                "format": "link"
              },
              "chunks.chunkIndex": {
                "label": "Chunk #",
                "format": "number"
              },
              "chunks.content": {
                "label": "Content",
                "format": "text"
              },
              "chunks.tokens": {
                "label": "Tokens",
                "format": "number"
              },
              "chunks.wordCount": {
                "label": "Words",
                "format": "number"
              }
            }
          }
        }
      }
    }
  },
  "dockerfile": "Dockerfile",
  "readme": "README.md",
  "categories": [
    "SCRAPER",
    "AI",
    "DEVELOPER_TOOLS"
  ],
  "defaultRunOptions": {
    "build": "latest",
    "timeoutSecs": 3600,
    "memoryMbytes": 4096
  }
}